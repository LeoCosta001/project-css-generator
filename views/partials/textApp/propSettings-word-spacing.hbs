<!-- [Propriedade "word-spacing"] -->
<div class="prop__container__word-spacing">

    <!-- [Titulo] de "word-spacing"-->
    <div class="prop__title title__word-spacing no-select">
        <p>Espaço entre Palavras</p>
        <hr>
        <div>
            <p>word-spacing</p>
        </div>
    </div>
    <div class="content__word-spacing">

        <!-- [Tipo de valor de "word-spacing"] -->
        <div class="input__type__select">
            <input type="button" id="button-free-value-word-spacing"
                class="prop__input__type__button input--type--button--active" value="Livre"></input>
            <input type="button" id="button-predefined-value-word-spacing" class="prop__input__type__button"
                value="Pré-definido"></input>
        </div>

        <!-- [Input de Valor "Live" de "word-spacing"] -->
        <div class="free__value__container__word-spacing">
            <input id="property-word-spacing-value" class="prop__input__text" type="text" value="12">
            <label class="mini__arrow" for="valueTypeWordSpacing"></label>
            <select id="property-word-spacing-value-type" class="prop__select__color" id="valueTypeWordSpacing">
                <option value="px">px</option>
                <option value="pt">pt</option>
                <option value="cm">cm</option>
                <option value="mm">mm</option>
                <option value="em">em</option>
                <option value="rem">rem</option>
                <option value="%">%</option>
            </select>
        </div>

        <!-- [Input de Valor "Pré-Definido" de "word-spacing"] -->
        <div class="predefined__value__container__word-spacing">
            <label class="mini__arrow"></label>
            <select id="property-word-spacing-value-predefined" class="prop__select__color">
                <option value="nenhum">Nenhum</option>
                <option value="normal">normal</option>
            </select>
        </div>
    </div>
</div>