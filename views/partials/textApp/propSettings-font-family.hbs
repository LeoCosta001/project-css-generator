<!-- [Propriedade "font-family"] -->
<div class="prop__container__font-family">

    <!-- [Titulo] de "font-family"-->
    <div class="prop__title title__font-family no-select">
        <p>Variação de Fonte</p>
        <hr>
        <div>
            <p>font-family</p>
        </div>
    </div>
    <div class="content__font-family">

        <!-- [Tipo de valor de "font-family"] -->
        <div class="input__type__select">
            <input type="button" id="button-predefined-value-font-family"
                class="prop__input__type__button input--type--button--active" value="Pré-definido">
        </div>

        <!-- [Input de Valor "Pré-Definido" de "font-family"] -->
        <div class="predefined__value__container__font-family">
            <label class="mini__arrow"></label>
            <select id="property-font-family-value-predefined" class="prop__select__color">
                <option value="none">Nenhum</option>
                <optgroup label="Serif">
                    <option value="Georgia">Georgia</option>
                    <option value="PT Serif">PT Serif</option>
                    <option value="Roboto Slab">Roboto Slab</option>
                    <option value="Times New Roman">Times New Roman</option>
                </optgroup>
                <optgroup label="Sans Serif">
                    <option value="Arial">Arial</option>
                    <option value="Lucida Sans">Lucida Sans</option>
                    <option value="Open Sans">Open Sans</option>
                    <option value="Spartan">Spartan</option>
                </optgroup>
                <optgroup label="Monospace">
                    <option value="ComingoCode">ComingoCode</option>
                    <option value="Monospace">Monospace</option>
                </optgroup>
                <optgroup label="Manuscrito">
                    <option value="Caveat">Caveat</option>
                    <option value="Great Vibes">Great Vibes</option>
                    <option value="Indie Flower">Indie Flower</option>
                </optgroup>
            </select>
        </div>
    </div>
</div>